<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingTop="4dp"
    android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingBottom="16dp"
    android:background="@drawable/card" android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_img"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#2a2a2a"
        tools:text="@string/product_name" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@string/product_price"
        android:layout_below="@id/product_name"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>